{% extends 'BISCMSBundle:Login:base.html.twig' %}

{%- block title %}
    Log into the CMS
{% endblock title -%}

{% block body %}
    <div class="container">
        <h1 class="text-center"><i class="fa fa-sign-in"></i> Sign in</h1>
        <hr/>
        <div class="well">
            {{ form_start(form, { 'attr': {'novalidate' : 'novalidate'} }) }}

            {% if not form.vars.valid %}
                {{ form_errors(form) }}
            {% endif %}

            <div class="form-group">
                {{ form_label(form.email, 'Email address') }}
                {{ form_widget(form.email) }}
            </div>

            <div class="form-group">
                {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.submit, {
                'attr': { 'class' : 'btn-success btn-block' }
                }) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}