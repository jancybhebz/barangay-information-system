{% extends 'BISCMSBundle::cms.html.twig' %}
{% form_theme form 'BISCMSBundle:Form:bootstrap_3_layout.html.twig' %}

{% block title %}Add a new resident | {{ parent() }}{% endblock %}

{% block heading %}
    <h1 class="text-center"> <i class="fa fa-plus"></i> Add a new resident</h1>
{% endblock heading %}

{% block content %}
    <div class="well">
        {{ form(form, {
        'attr': {
        'novalidate' : 'novalidate',
        'class': 'form-edit'
        }}) }}
        <ul class="list-unstyled form-crud-buttons">
            <li>
                <a href="{{ path('resident') }}" class="btn btn-info btn-block">
                    Back to the list
                </a>
            </li>
        </ul>
    </div>
{% endblock content %}